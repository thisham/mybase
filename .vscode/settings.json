{
    "[javascript]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[typescript]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.suggest.insertMode": "replace",
        "gitlens.codeLens.scopes": ["document"]
    },
    "[blade]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[javascriptreact]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrapColumn": 80
    },
    "[typescriptreact]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrapColumn": 80
    },
    "[php]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "editor.formatOnSave": true,
    "files.associations": {
        "*.embeddedhtml": "html",
        "*.css": "postcss"
    }
}
